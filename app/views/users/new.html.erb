<h1>Signup for Remember Your Run!</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited your account from being created:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email%>
  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "(hidden)" %>
  <%= f.label :confirm_password %>
  <%= f.password_field :password_confirmtation %>
  <br>
  <%= f.submit %>
<% end %>
