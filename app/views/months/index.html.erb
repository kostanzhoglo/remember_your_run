<h1>Remember Your Run</h1>
<h3>Running is healthy. Remember what you did!</h3><br>

<h5><%= link_to "Fastest Overall Runs", runs_fastest_pace_path %></h5>

<strong><h2>Your Previous Runs</h2></strong>
<% @months.each do |month| %>
  <%= link_to(month) do %>
    <h3><%= month.name %> <%= month.year %></h3>
  <% end %>
<% end %>

<br>

<% if @month.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@month.errors.count, "error") %> stopped your new month from being created:</h2>

    <ul>
    <% @month.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<section class="main">
  <strong><h2>Start a New Running Month</h2></strong>
  <%= form_for @month do |f| %>
    <%= f.label :month%>
    <%= f.text_field :name, placeholder: (@month.errors.full_messages_for(:name).first) %>  <!--, class: "new-todo" -->

    <%= f.label :year %>
    <%= f.text_field :year, placeholder: (@month.errors.full_messages_for(:year).first) %><br>

    <%= f.label :goal %>
    <%= f.text_field :goal, size: "49" %><br>

    <%= f.submit %>
  <% end %>
</section>

<section class="info">
<%= link_to "Logout", logout_path %>
<p>You're currently logged in as: <%= current_user.email  %></p>

</section>
